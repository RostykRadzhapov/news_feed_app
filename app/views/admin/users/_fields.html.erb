<div class="field form-group width-40">
  <%= form.label :email %>
  <%= form.text_field :email, placeholder: 'Enter user email', class: "form-control" %>
</div>
<div class="field form-group width-40">
  <%= form.label :password %>
  <%= form.text_field :password, placeholder: 'Enter password', class: "form-control" %>
</div>
<div class="field form-group">
  <%= form.submit %>
  <%= link_to 'Back', admin_users_path %>
</div>
