<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<% @article.images.each do |image| %>
  <%= image_tag image %>
<% end %>

<% @article.videos.each do |video| %>
  <%= video_tag(url_for(video), controls: '') %>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>

<a href=<%= @article.link %>>
  <%= link_thumbnailer(@article.link).title %>
  <%= image_tag link_thumbnailer(@article.link).favicon %>
</a>
